<%= simple_form_for @ingrediente, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize == "New" ? "Novo" : "Editar" %> Ingrediente</legend>

    <%= f.input :nome %>

    <div class="form-actions">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to 'Cancelar', ingredientes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
