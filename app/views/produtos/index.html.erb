      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.id %></td>
        <td><%= link_to produto.nome, produto_path(produto) %></td>
        <td><%= produto.sabor %></td>
        <td><%= produto.peso %></td>
        <td>
          <%= link_to 'Editar', edit_produto_path(produto), :class => 'btn btn-mini' %>
